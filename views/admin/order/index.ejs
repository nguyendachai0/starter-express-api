<div class="content-body">
    <div class="container-fluid">
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-responsive-md">
                                <h3>Order Table</h3>
                                <thead>
                                    <tr>
                                        <th style="width:80px;"><strong>#</strong></th>
                                        <th><strong>Name</strong></th>
                                        <th><strong>Phone</strong></th>
                                        <th><strong>Email</strong></th>
                                        <th><strong>Total_amount</strong></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="orderTableBody">
                                    <% orders.forEach((order, index)=> { %>
                                        <tr>
                                            <td><strong>
                                                    <%= index + 1 %>
                                                </strong></td>
                                            <td>
                                                <%= order.firstName %>
                                                    <%= order.lastName %>
                                            </td>
                                            <td>
                                                <%= order.phone %>
                                            </td>
                                            <td>
                                                <%= order.email %>
                                            </td>
                                            <td>
                                                $<%= order.total %>
                                            </td>
                                            <td>
                                                <div class="dropdown">
                                                    <button type="button" class="btn btn-success light sharp"
                                                        data-toggle="dropdown">
                                                        <svg width="20px" height="20px" viewBox="0 0 24 24"
                                                            version="1.1">
                                                            <g stroke="none" stroke-width="1" fill="none"
                                                                fill-rule="evenodd">
                                                                <rect x="0" y="0" width="24" height="24"></rect>
                                                                <circle fill="#000000" cx="5" cy="12" r="2"></circle>
                                                                <circle fill="#000000" cx="12" cy="12" r="2"></circle>
                                                                <circle fill="#000000" cx="19" cy="12" r="2"></circle>
                                                            </g>
                                                        </svg>
                                                    </button>
                                                    <div class="dropdown-menu">
                                                        <form method="post" action="">
                                                            <input type="hidden" name="orderId" value="<%=order.id%>" />
                                                            <button class="dropdown-item">View
                                                                Details</button>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }); %>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% if(locals.order){ %>
            <div class=" row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-responsive-md">
                                    <h3>Order Details</h3>
                                    <thead>
                                        <tr>
                                            <th style="width:80px;">
                                                <strong>#</strong>
                                            </th>
                                            <th><strong>title</strong>
                                            </th>
                                            <th><strong>Price</strong>
                                            </th>
                                            <th><strong>Quantity</strong>
                                            </th>
                                            <th><strong>Image</strong>
                                            </th>
                                            <th><strong>Color</strong>
                                            </th>
                                            <th><strong>Size</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="orderTableBody">
                                        <% order.items.forEach((item, index)=> { %>

                                            <tr>
                                                <td><strong>
                                                        <%= index + 1 %>
                                                    </strong></td>
                                                <td>
                                                    <%= item.title %>
                                                </td>
                                                <td>
                                                    <%= item.price %>
                                                </td>
                                                <td>
                                                    <%= item.quantity %>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img src="/uploads/product/<%= item.image %>" width="24" alt="">
                                                    </div>
                                                <td>
                                                    <%= item.color %>

                                                </td>
                                                <td>
                                                    <%= item.size %>
                                                </td>
                                            </tr>
                                            <% }); %>

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>
</div>